{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Signup {% endblock %}

{% block body %}

<section class="signup LayoutProduct">
    <div class="signup-form">
        <h2>Inscrivez-vous</h2>

            {{form_start(UserType, {'attr':{'class':'form LayoutProduct', 'novalidate':'novalidate'}})}}
                {{ form_widget(UserType, {'attr':{'class':'formChamp'}})}}
                <input class="submit" type="submit" value="S'inscrire !"> 
                <input type="hidden" name="svg" value="{{ svg|escape('html_attr') }}">
            {{form_end(UserType)}} 
    </div>
    <div class="signup-avatar">
        <h2>Votre avatar aléatoire</h2>

        <div id="svgAvatar">
            {{ svg|raw  }}
        </div>

        <div>
            {{form_start(avatarType, {'attr':{'class':'avatarForm LayoutProduct'}})}}
                {{ form_widget(avatarType) }}
                <input class="submit" type="submit" value="Générer un autre avatar !"> 
            {{form_end(avatarType)}} 
        </div>
        
    </div>
</section>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="module" src="{{ asset('js/signup.js') }}"></script>
{% endblock %}
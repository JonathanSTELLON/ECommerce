{% extends 'base.admin.html.twig' %}

{% block title %} {{ parent() }} - Administration {% endblock %}

{% block body %}

    <h2><i class="fas fa-tasks"></i> Dashboard Administration</h2>

    <div class="buttonDiv">
        <a class="button" href="{{ path('admin_product_add') }}"><i class="far fa-plus-square"></i> Ajouter un produit</a>
    </div>

    <table>
        <thead>
            <tr class="TabEntete">
                <td>Nom du produit</td>
                <td>Cat√©gorie</td>
                <td>Photo</td>
                <td>Editer</td>
                <td>Supprimer</td>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
            <tr class="TabContent">
                <td>{{product.name|capitalize}}</td>
                <td>{{product.category.name}}</td>
                <td><img class="dashboardPic" src="{{product.thumbnail}}"></img></td>
                <td><i class="far fa-edit"></i></td>
                <td><i class="far fa-trash-alt"></i></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}